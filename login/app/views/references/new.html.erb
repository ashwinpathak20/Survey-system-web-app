<% provide(:title,'Survey') %>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<h1>Let's Survey</h1>
		</div>
	</div>  
</nav>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1> Survey </h1>
		<%= form_for(@reference) do |r| %>
			<%= r.select :option_id, options_for_select(@options.all.map {|p| [p.q_option , p.id]}) , class: 'form-control'%><br><br>
			<%= r.submit "Submit Answer", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>
