<% if @option.errors.any? %>
  <div id="error_explanation">
	  <div class="alert alert-danger">
		  The form contains <%= pluralize(@option.errors.count, "error") %>.
	  </div>
	  <ul>
		  <% @option.errors.full_messages.each do |msg| %>
			  <li><%= msg %></li>
		  <% end %>
	  </ul>
  </div>
<% end %>

