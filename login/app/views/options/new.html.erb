<% provide(:title,'Options') %>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<h1>Let's Survey</h1>
		</div>
	</div>  
</nav>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1> Create Options </h1>
		<%= form_for(@option) do |i| %>
			<%= render 'shared/error_messages_3' %>
			<%= i.label :"option" %><br>
			<%= i.text_field :q_option, class: 'form-control' %>
			<br>
			<br>
			<%= i.label :"select-question" %><br>
			<%= i.select :question_id, options_for_select(Question.all.map {|p| [p.q_name , p.id]}), class: 'form-control'%>
			<br>
			<br>
			<%= i.submit "Add Options", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

