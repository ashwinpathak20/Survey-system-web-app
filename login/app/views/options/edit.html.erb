<% provide(:title, "edit options") %>
<h1> update your options</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
	<%= form_for(@option) do |f| %>
		<%= render 'shared/error_messages_3' %>

		<%= f.label :option %>
		<%= f.text_field :q_option, class: 'form-control' %>
		
		<%= f.submit "save changes", class: "btn btn-primary" %>
	<% end %>

	</div>
</div>
