<% provide(:title,'Questions') %>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<h1>Let's Survey</h1>
		</div>
	</div>  
</nav>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1> Create Questions </h1>
		<%= form_for(@question) do |i| %>
		<%= render 'shared/error_messages_2' %>
			<%= i.label :"question" %><br>
			<%= i.text_field :q_name, class: 'form-control' %>
			<br>
			<%= i.label :"survey_name" %><br>
			<%= i.select :survey_id, options_for_select(Survey.all.map {|p| [p.name , p.id]}) , class: 'form-control'%>
			<br>
			<br>
			<%= i.label :"type" %><br>
			<%= i.select :q_definition, ['single-correct-objective','multiple-corret-objective','subjective'] , class: 'form-control' %>
			<br>
			<br>
			<%= i.submit "Add question", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

