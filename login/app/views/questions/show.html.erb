<% provide(:title, 'All Surveys') %>
<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<h1>Let's Survey</h1>
		</div>
		<div class="col-md-9">
		</div>
	</div>
</nav>
<div class="row">
	<div class="col-md-6 col-md-offset-3">


<h1> All Options to the Question</h1>

<ul class="users">
		<table class="table">
		<thead>
			<tr>
				<th>Option</th>
			</tr>
		</thead>
		<tbody>

			<% @options.each do |option| %>
				<tr class="info">
					<td>
						<%= option.q_option %>
					</td>
					<% if current_user.admin?%>
						<td>
						<%= link_to "edit", edit_option_path(option)%>
						</td>
						<td>
				<%= link_to "delete", option, method: :delete,
					data: { confirm: "You sure?" } %>
					</td>
			<% end %>
				</tr>
	<% end %>
		</tbody>
		</table>
</ul>
	</div>
</div>
